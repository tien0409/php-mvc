{% extends 'admin.twig' %}

{% block head %}
    <title>Create Book</title>
{% endblock %}

{% block body %}
    <div class="mt-4">
        <div>
            <a href="/admin/books" class="text-decoration-none">
                <i class="fa-solid fa-arrow-left fs-4 me-3"></i>
            </a>
            <h3 class="d-inline fw-bold mb-0 fs-3">Tạo mới sách</h3>
        </div>
        <div class="mt-5">
            <form class="row gap-3 flex-nowrap" action="/admin/books/create/new" method="POST" enctype="multipart/form-data" >
                <div class="col col-5">
                    <div class="d-flex justify-content-between">
                        <i class="fa-solid fa-angles-right"></i>
                        <span class="fw-bolder fs-4">Trang sách</span>
                        <i class="fa-solid fa-angles-left"></i>
                    </div>

                    <div style="cursor:pointer;"
                         class="book__pages bg-white rounded-2 border mt-4 h-75 w-100 d-flex justify-content-center align-items-center">
                        <span class="fs-4 fw-bolder">Ấn để thêm trang sách</span>
                    </div>
                    <input class="input__pages" hidden name="book_pages[]" type="file" multiple="multiple">
                </div>
                <div class="col col-7">
                    <div class="mb-3">
                        <label for="banner" class="form-label">Banner</label>
                        <input class="book__banner form-control" type="file" id="banner" name="banner">
                    </div>
                    <div class="mb-3 row">
                        <div class="col col-6">
                            <label for="name" class="form-label">Tên sách</label>
                            <input type="text" class="form-control" name="name" id="name">
                        </div>

                        <div class="col col-6">
                            <label for="price" class="form-label">Giá</label>
                            <div class="input-group">
                                <input type="text" id="price" name="price" class="form-control"
                                       aria-label="Amount (to the nearest dollar)">
                                <div class="input-group-append">
                                    <span class="input-group-text">VND</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-group">
                            <label for="select2Multiple">Thể loại</label>
                            <select class="select2-multiple form-control" name="bookCategories[]" multiple="multiple"
                                    id="select2Multiple">
                                <option value="">Select</option>
                                <option value="Aceh">Aceh</option>
                            </select>
                        </div>

                    </div>
                    <div class="mb-3">
                        <label for="description">Mô tả khóa học</label>
                        <div class="mt-2">
                            <textarea name="description" id="description" class="editor"></textarea>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description">Tổng quan khoa học</label>
                        <div class="mt-2">
                            <textarea name="overview" id="overview" class="editor"></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary px-5 ">Tạo mới</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block script %}
    <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
    <script src="/js/admin/tinymce.js"></script>
    <script src="/js/admin/books/create.js"></script>
{% endblock %}
