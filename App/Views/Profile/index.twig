{% extends 'base.twig' %}

{% block head %}
    <title>Profile</title>
    <link rel="stylesheet" href="/css/profile/index.css">
{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="container">
            <div class="row g-5">
                <div class="sidebar_profile col col-3 bg-white d-flex flex-column">
                    <div class="info mt-5 align-self-center d-flex align-items-center flex-column">
                        <img width="170" height="170" class="rounded-pill" src="/images/course-image-test.jpg" alt="">
                        <h3 class="fs-3 fw-bolder mt-2 text-center">{{ "#{user.first_name} #{user.last_name}" }}</h2>
                        <div class="text-center">Số dư: 100000d</div>
                    </div>

                    <ul class="nav flex-column mt-5 px-4">
                        <li class="nav-item">
                            <a class="nav-link active text-black fs-4" aria-current="page" href="#">Thông tin cá
                                nhân</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black-50 fs-4" href="#">Lịch sử giao dịch</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-black-50 fs-4" href="#">Đăng xuất</a>
                        </li>
                    </ul>
                </div>

                <div class="col col-9 py-5">
                    <h3 class="fs-3 fw-bolder">Thông tin cá nhân</h3>
                    <form class="mt-3 p-5 bg-white w-100" action="/profile/update" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" disabled name="email" value="{{ user.email }}">
                        </div>
                        <div class="mb-3 row">
                            <div class="col col-6">
                                <label for="first__name" class="form-label">Họ</label>
                                <input type="text" class="form-control" name="first_name" id="first__Name"
                                       value="{{ user.first_name }}">
                            </div>
                            <div class="col col-6">
                                <label for="last__name" class="form-label">Tên</label>
                                <input type="text" class="form-control" value="{{ user.last_name }}" name="last_name" id="last__name">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Tên đăng nhập</label>
                            <input type="text" class="form-control" name="username" id="username" disabled value="{{ user.username }}">
                        </div>
                        <div class="mb-3">
                            <label for="exampleInputPassword1" class="form-label">Password</label>
                            <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-light px-5 ">Hủy</button>
                            <button type="submit" class="btn btn-primary px-5 ">Cập nhật</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}